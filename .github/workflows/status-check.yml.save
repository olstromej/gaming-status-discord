name: Daily Server Status Check

on:
  schedule:
    - cron: '30 11 * * *'  # 08:10 AM EST (13:10 UTC)
  workflow_dispatch:  # Allows manual runs

jobs:
  check_status:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt

      - name: Run monitor script with debug
        env:
          DISCORD_WEBHOOK_URL: ${{ secrets.DISCORD_WEBHOOK_URL }}
        run: |
          echo "Checking if Discord webhook URL is set..."
          if [ -z "$DISCORD_WEBHOOK_URL" ]; then
            echo "ERROR: DISCORD_WEBHOOK_URL is not set!"
            exit 1
          else
            echo "Webhook URL is set."
          fi
          echo "Running monitor.py..."
          python monitor.py
